{
    "applications"      : {
        "gecko"         : {
            "id"        : "gobbledygook@manzdagratiano.org",
            "strict_min_version"    : "48.0"
        }
    },

    "manifest_version"  : 2,
    "name"              : "Gobbledygook",
    "version"           : "@BUILDVER",

    "description"       : "T3h Unh@X@b13 P@$$w0rd $01ut10n",

    "icons"             : {
        "16"            : "icon/icon-16.png",
        "32"            : "icon/icon-32.png",
        "48"            : "icon/icon-48.png",
        "64"            : "icon/icon-64.png",
        "128"           : "icon/icon-128.png"
    },

    "permissions"       : [
        "downloads",
        "notifications",
        "storage",
        "tabs"
    ],

    "browser_action"    : {
        "default_title" : "Gobbledygook",
        "default_icon"  : {
            "19"        : "icon/icon-19.png",
            "38"        : "icon/icon-38.png"
        },
        "default_popup" : "gobbledygook.html",
        "browser_style" : false
    },

    "background"        : {
        "scripts"       : [ "eventpage.js" ]
    },

    "options_ui"        : {
        "page"          : "options.html",
        "open_in_tab"   : false
    },

    "homepage_url"      : "https://github.com/manzdagratiano/gobbledygook"
}
