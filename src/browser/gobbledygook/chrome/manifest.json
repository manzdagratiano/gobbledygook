{
    "manifest_version"  : 2,
    "name"              : "gobbledygook",
    "short_name"        : "gobbledygook",
    "version"           : "@BUILDVER",
    "version_name"      : "@BUILDTAG",

    "description"       : "The Unhackable Password Solution",

    "icons"             : {
        "16"            : "icon/icon-16.png",
        "32"            : "icon/icon-32.png",
        "48"            : "icon/icon-48.png",
        "64"            : "icon/icon-64.png",
        "128"           : "icon/icon-128.png"
    },

    "permissions"       : [
        "clipboardWrite",
        "downloads",
        "storage",
        "tabs"
    ],

    "browser_action"    : {
        "default_title" : "gobbledygook",
        "default_icon"  : {
            "19"        : "icon/icon-19.png",
            "38"        : "icon/icon-38.png"
        },
        "default_popup" : "gobbledygook.html"
    },

    "background"        : {
        "scripts"       : [ "eventpage.js" ],
        "persistent"    : false
    },

    "options_ui"        : {
        "page"          : "options.html",
        "chrome_style"  : true
    },

    "options_page"      : "options.html",

    "homepage_url"      : "https://github.com/manzdagratiano/gobbledygook"
}
