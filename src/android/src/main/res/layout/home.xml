<?xml version="1.0" encoding="utf-8"?>
<!-- The topmost element is a CoordinatorLayout
     (FrameLayout on steroids)
     so that a floating action button can be placed
     with the appropriate "gravity" (bottom|right) -->
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginFragmentFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- This fragment has a SearchView above a WebView,
         so a RelativeLayout is needed to place them
         one below the other -->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <SearchView
            android:id="@+id/homeSearchView"
            android:queryHint="@string/hint_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            />

        <!-- Place the WebView explicitly below the SearchView
             by using the "android:layout_below" property -->
        <WebView
            android:id="@+id/homeWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/homeSearchView"
            />
    </RelativeLayout>

    <!-- The Floating Action Button.
         Note that starting with the support library version 23.2.0,
         it is no longer allowed to anchor it to the CoordinatorLayout itself.
         Rather, it must be anchored to a descendent view, which in this case
         is the WebView. -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton"
        android:src="@drawable/ic_menu_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/floating_button_margin"
        android:layout_gravity="bottom|end"
        app:layout_anchor="@id/homeWebView"
        app:layout_anchorGravity="bottom|right|end"
        />

    <!--ImageButton
        android:id="@+id/mainFragmentButton"
