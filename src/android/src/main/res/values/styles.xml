<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TengenToppaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- No Action Bar, since we'll use a Toolbar as the AppBar.
             This is preferable to just using the "NoActionBar" theme for
             color consistency with the Toolbar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>
</resources>
